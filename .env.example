# ==============================================================================
# ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env.local for development
# Never commit .env.local or any file containing real secrets to version control

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# MongoDB connection string for Digital Ocean Managed Database
# Format: mongodb+srv://username:password@cluster.mongo.ondigitalocean.com/database?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/seatfinder

# ==============================================================================
# AUTHENTICATION & SECURITY
# ==============================================================================
# JWT secret for signing session tokens (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session cookie configuration
SESSION_COOKIE_NAME=seatfinder-session
SESSION_MAX_AGE=604800

# OTP configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# ==============================================================================
# EMAIL SERVICE (MAILGUN)
# ==============================================================================
# Mailgun API configuration for sending OTP emails
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.com
MAILGUN_FROM_EMAIL=noreply@your-domain.com
MAILGUN_FROM_NAME=SeatFinder

# Mailgun webhook verification (for delivery confirmations)
MAILGUN_WEBHOOK_SIGNING_KEY=your-webhook-signing-key

# ==============================================================================
# PAYMENT PROCESSING (MIDTRANS)
# ==============================================================================
# Midtrans payment gateway configuration
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_WEBHOOK_SECRET=your-midtrans-webhook-secret

# ==============================================================================
# FILE UPLOAD & STORAGE
# ==============================================================================
# CSV upload limits
MAX_CSV_FILE_SIZE_MB=10
MAX_CSV_ROWS=10000

# QR Code generation settings
QR_CODE_SIZE=200
QR_CODE_ERROR_CORRECTION=M

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================
# Error tracking (optional for MVP)
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=development

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=pretty

# ==============================================================================
# INTERNAL ANALYTICS
# ==============================================================================
# Internal metrics collection (server-side only)
METRICS_ENABLED=true
METRICS_ENDPOINT=/api/metrics/ingest
METRICS_SECRET=your-internal-metrics-secret

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Enable debug features in development
DEBUG_MODE=false
ENABLE_API_DOCS=true

# Seed data for development
ENABLE_SEED_DATA=false
SEED_ADMIN_EMAIL=admin@seatfinder.local

# ==============================================================================
# DEPLOYMENT SETTINGS
# ==============================================================================
# Vercel deployment configuration
VERCEL_ENV=development
VERCEL_REGION=sin1

# Domain and CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable features during development
FEATURE_PAYMENT_ENABLED=true
FEATURE_EMAIL_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true
